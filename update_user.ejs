    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i>Home</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update </h2>
                <span class="text-light">Use the below form to Update your command</span>
            </div>

            <!-- add user form -->
            <!-- form handling -->
            <form method="POST" id="update_user">
                <div class="new_user">
                    <div class="form-group">
                        <label for="Nom" class="text-light">Nom</label>
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <input type="text" name="Nom" value="<%= user.Nom %>" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="prenom" class="text-light">prenom</label>
                        <input type="text" name="prenom" value="<%= user.prenom%>" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="telephone" class="text-light">telephone</label>
                        <input type="text" name="telephone" value="<%= user.telephone%>" placeholder="213696176440">
                    </div>
                    <div class="form-group">
                        <label for="wilaya" class="text-light">wilaya</label>
                        <input type="text" name="wilaya" value="<%= user.wilaya%>" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="commune" class="text-light">commune</label>
                        <input type="text" name="commune" value="<%= user.commune%>" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="poids" class="text-light">poids</label>
                        <input type="text" name="poids" value="<%= user.poids%>" placeholder="valeur en kg">
                    </div>
                    <div class="form-group">
                        <label for="type_denvoie" class="text-light">type d'envoie</label>
                        <div class="radio inline">
                            <input type="radio" id="radio-2" name="type_denvoie" value="Livraison"
                                <%=user.typy_envoie=='Livraison' ? 'checked' : '' %>>
                            <label for="radio-2" class="radio-label">Livraison</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-3" name="type_denvoie" value="pickup"
                                <%=user.type_denvoie=='pickup' ? 'checked' : '' %> >
                            <label for="radio-3" class="radio-label">pickup</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-4" name="type_denvoie" value="echange"
                                <%=user.type_denvoie=='echange' ? 'checked' : '' %> >
                            <label for="radio-4" class="radio-label">echange</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-5" name="type_denvoie" value="Recouvrement"
                                <%=user.type_denvoie=='Recouvrement' ? 'checked' : '' %> >
                            <label for="radio-5" class="radio-label">Recouvrement</label>
                        </div>
                    </div>



                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>

                </div>
            </form>

        </div>
    </main>
